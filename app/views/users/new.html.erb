<h1>Inscription</h1>

<% if @user.errors.any? %>
  <div class="alert alert-danger">
    <h4><%= pluralize(@user.errors.count, "erreur") %> empêchent la création :</h4>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @user, local: true do |form| %>
  <div>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name, autocomplete: "given-name" %>
  </div>
  <div>
    <%= form.label :last_name %><br>
    <%= form.text_field :last_name, autocomplete: "family-name" %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description, rows: 4, placeholder: "Présente-toi en quelques mots..." %>
  </div>

  <div>
    <%= form.label :city_id, "Ville" %><br>
    <%= form.collection_select :city_id, City.all, :id, :name, prompt: "Choisissez une ville", autocomplete: "address-level2" %>
  </div>

  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, autocomplete: "email" %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password, autocomplete: "new-password" %>
  </div>

  <div>
    <%= form.label :password_confirmation %><br>
    <%= form.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div>
    <%= form.submit "S'inscrire", class: "btn btn-success" %>
  </div>
<% end %>
